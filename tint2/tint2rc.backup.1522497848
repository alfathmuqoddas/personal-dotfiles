# Background definitions
# ID 1
rounded = 7
border_width = 0
background_color = #000000 0
border_color = #FFFFFF 16

# ID 2
rounded = 7
border_width = 0
background_color = #FFFFFF 10
border_color = #FFFFFF 48

# ID 3
rounded = 7
border_width = 0
background_color = #000000 40
border_color = #FFFFFF 68

# ID 4 - desktop active
rounded = 7
border_width = 0
background_color = #000000 80
border_color = #000000 0

# Launchers
launcher_tooltip = 1
#launcher_icon_theme = Faenza-minimal
#launcher_apps_dir = .local/share/tint2launch
launcher_item_app = /usr/share/applications/01-menu.desktop
launcher_item_app = /usr/share/applications/03-compton.desktop
launcher_item_app = /usr/share/applications/roxterm.desktop
launcher_item_app = /usr/share/applications/03-desktop.desktop

# Panel
panel_monitor = all
panel_position = bottom center horizontal
panel_size = 100% 30
panel_margin = 0 0
panel_padding = 5 0 5
panel_dock = 0
# shows openbox menu on right click
wm_menu = 0
panel_layer = top
panel_background_id = 1
panel_items = LTSBC

# Panel Autohide
autohide = 0
autohide_show_timeout = 0
autohide_hide_timeout = 0
autohide_height = 2
# strut_policy = none


# Taskbar
taskbar_mode = multi_desktop
taskbar_padding = 2 2 2
taskbar_background_id = 3
taskbar_active_background_id = 4
taskbar_name = 1
taskbar_name_font = Sans bold 8
taskbar_name_font_color = #FFFFFF 30
taskbar_name_active_font_color = #FFFFFF 80

# Tasks
urgent_nb_of_blink = 8
task_icon = 1
task_text = 0
task_centered = 1
task_maximum_size = 24 24
task_padding = 6 2
task_background_id = 4
task_active_background_id = 4
task_urgent_background_id = 1
task_iconified_background_id = 1
task_tooltip = 0

# Task Icons
task_icon_asb = 30 0 0
task_active_icon_asb = 90 0 0
task_urgent_icon_asb = 90 0 0
task_iconified_icon_asb = 30 0 0

# Fonts
task_font = Sans 8
task_font_color = #FFFFFF 68
task_active_font_color = #FFFFFF 83
task_urgent_font_color = #FFFFFF 83
task_iconified_font_color = #FFFFFF 68
font_shadow = 0

# System Tray
systray = 1
systray_padding = 2 3 2
systray_sort = ascending
systray_background_id = 4
systray_icon_size = auto
systray_icon_asb = 70 0 0

# Clock
time1_format = %H:%M
time1_font = Sans 8
time2_format = %A %d %B
time2_font = Sans 7
clock_font_color = #FFFFFF 74
clock_padding = 4 4
clock_background_id = 4
clock_rclick_command = orage

# Tooltips
tooltip = 1
tooltip_padding = 2 2
tooltip_show_timeout = 0.1
tooltip_hide_timeout = 0.1
tooltip_background_id = 1
tooltip_font = sans 12
tooltip_font_color = #FFFFFF 100


# Mouse
mouse_middle = none
mouse_right = close
mouse_scroll_up = toggle
mouse_scroll_down = iconify

# Battery
battery = 0
battery_low_status = 20
battery_low_cmd = notify-send "Battery low"
battery_hide = never
bat1_font = Sans 8
bat2_font = Sans 6
battery_font_color = #FFFFFF 74
battery_padding = 3 3
battery_background_id = 3

# End of config
